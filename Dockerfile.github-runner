# Multi-stage build: copy kaniko executor from official image
FROM gcr.io/kaniko-project/executor:latest AS kaniko

FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl git buildah uidmap fuse-overlayfs ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy kaniko executor from the kaniko image
COPY --from=kaniko /kaniko/executor /usr/local/bin/executor
RUN chmod +x /usr/local/bin/executor

# Create /kaniko directory for kaniko's internal operations
# Make it fully writable by the runner user (UID 1000) - dev/internal cluster
RUN mkdir -p /kaniko && \
    chown -R 1000:1000 /kaniko && \
    chmod 777 /kaniko

# Create a non-root user for running the runner
RUN useradd -m runner && \
    chown -R runner:runner /home/runner && \
    chmod 755 /home/runner

# Configure buildah for rootless operation
# Set up subuid/subgid mappings for the runner user
RUN echo "runner:100000:65536" >> /etc/subuid && \
    echo "runner:100000:65536" >> /etc/subgid && \
    chown -R runner:runner /home/runner

# Configure buildah storage for rootless user
USER runner
WORKDIR /home/runner
RUN mkdir -p ~/.local/share/containers/storage
# Note: buildah info may fail during image build if user namespaces aren't available
# This is OK - it will be initialized at runtime

# Install GitHub Actions runner
# Running as root, so ensure /home/runner is writable by root
USER root
RUN curl -O -L https://github.com/actions/runner/releases/download/v2.316.0/actions-runner-linux-x64-2.316.0.tar.gz \
    && tar xzf actions-runner-linux-x64-2.316.0.tar.gz \
    && rm actions-runner-linux-x64-2.316.0.tar.gz \
    && chown -R root:root /home/runner \
    && chmod -R 777 /home/runner

# Copy startup script with executable permissions
USER root
COPY scripts/start-runner.sh /home/runner/start-runner.sh
RUN chmod 755 /home/runner/start-runner.sh && \
    chown -R runner:runner /home/runner && \
    chmod -R 755 /home/runner

# Run as runner user (GitHub Actions runner requires non-root)
# Kaniko executor is in /usr/local/bin which is accessible to all users
USER runner

# Set entrypoint to startup script
ENTRYPOINT ["/home/runner/start-runner.sh"] 
