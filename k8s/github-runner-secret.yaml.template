apiVersion: v1
kind: Secret
metadata:
  name: github-runner-secrets
  namespace: default  # Change to your namespace if needed
type: Opaque
stringData:
  # GitHub registration token (get from: Repo/Org Settings -> Actions -> Runners -> New self-hosted runner)
  github_token: "YOUR_REGISTRATION_TOKEN_HERE"
  # Optional: Registry password if you need to push images
  # registry_password: "YOUR_REGISTRY_PASSWORD_HERE"

